<launch>
  <node pkg="laser_filters" type="scan_to_cloud_filter_chain"
      name="tilt_shadow_filter">
    <rosparam command="load" file="$(find floribot_robot)/my_laser_config.yaml" />
    <rosparam command="load" file="$(find floribot_robot)/my_cloud_config.yaml" />
    <param name="high_fidelity" value="true" />
    <param name="target_frame" type="string" value="base_link" />
    <!remap from="scan" to="tilt_scan" />
    <!remap from="cloud_filtered" to="tilt_scan_cloud_filtered" />
  </node>
</launch>